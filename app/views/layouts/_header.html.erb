<header class="navbar navbar-default navbar-fixed-top">
  <nav>
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/"><b>Global Village Foundation</b></a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="<%= active_class(root_path) %>">
            <a href="/"><span class="glyphicon glyphicon-home"></span> Home</a>
          </li>
          <li class="<%= active_class(work_path) %>"><%= link_to "Work", work_path %></li>
          <li class="<%= active_class(people_path) %>"><%= link_to "People", people_path%></li>
          <li class="<%= active_class(blogg_path) %>"><%= link_to "Blog", blogg_path%></li>
          <li class="<%= active_class(events_path) %>"><%= link_to "News & Events", events_path%></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="<%= active_class(current_user) %>">
              <%= link_to current_user do %>
                <i class="fa fa-user fa-fw"></i>&nbsp;<%=@current_user.name%></i>
              <% end %>
            </li>
            <li class="dropdown <%= active_class(people_path) %>">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b><span class="caret"></span></b></a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to edit_user_path(current_user) do %>
                    <i class="fa fa-cog fa-fw"></i>&nbsp;Settings</i>
                  <% end %>
                </li>
                <li>
                  <%= link_to logout_path, method: "delete" do %>
                    <i class="fa fa-sign-out fa-fw"></i>&nbsp;Log out</i>
                  <% end %>
                </li>
              </ul>
            </li>  
          <% else %>
              <li><%= link_to "Register", signup_path %></li>
              <li>
                <%= link_to login_path do%>
                  <i class="fa fa-sign-in fa-fw"></i>&nbsp;Log in</i>
                <%end%>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>